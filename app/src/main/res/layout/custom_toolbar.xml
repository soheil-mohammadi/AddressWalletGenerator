<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_toolbar"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/purple_500"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetLeft="0dp"
        app:buttonGravity="center_vertical"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEndWithActions="0dp"
        android:theme="@style/CustomToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/container_main_content_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:id="@+id/spaceViewToolbar"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/margin_very_small"
                    android:layout_height="@dimen/_40sdp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:src="@mipmap/ic_launcher_round"
                    />

                <Custom.CustomTextView
                    android:id="@+id/txt_title_toolbar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="Explore"
                    app:isBold="true"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/white"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_main_toolbar"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_very_small"
                    android:layout_marginEnd="@dimen/margin_very_small"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/selector_toolbar_action"
                    android:visibility="visible"
                    tools:src="@mipmap/ic_launcher_round"
                    />

                <ImageView
                    android:id="@+id/img_second_toolbar"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/selector_toolbar_action"
                    tools:src="@mipmap/ic_launcher_round"
                    android:visibility="gone"
                    />


            </LinearLayout>


        </LinearLayout>




    </androidx.appcompat.widget.Toolbar>



</LinearLayout>

